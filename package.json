{
  "name": "@thaerious/nidgetdev",
  "version": "1.0.0",
  "keywords": [
    "util",
    "functional",
    "server",
    "client",
    "browser"
  ],
  "author": "Ed Armstrong",
  "contributors": [],
  "dependencies": {
    "@thaerious/nidget": "file:../Nidget",
    "jquery": "^3.4.0"
  },
  "scripts": {
    "build-css": "sass ./src/scss/main.scss ./public_html/css/main.css",
    "watch-css": "sass --watch ./src/scss/main.scss:public_html/css/main.css ./src/scss/playerDialogFragment.scss:public_html/css/playerDialogFragment.css",
    "build-js": "browserify src/js/main.js -o public_html/compiled.js -d",
    "watch-js": "watchify src/js/main.js -o public_html/compiled.js -dv",
    "build": "npm run build-js && npm run build-css"
  },
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "devDependencies": {},
  "license": "ISC",
  "description": "npm run watch-css compiles files from src/scss to public_html/css (main.css)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Thaerious/NidgetDev.git"
  },
  "bugs": {
    "url": "https://github.com/Thaerious/NidgetDev/issues"
  },
  "homepage": "https://github.com/Thaerious/NidgetDev#readme"
}
